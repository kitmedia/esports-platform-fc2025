# Environment Configuration
NODE_ENV=production
PORT=3001

# Database Configuration
POSTGRES_USER=esports
POSTGRES_PASSWORD=change-this-secure-password
POSTGRES_DB=esports_platform
DATABASE_URL=postgresql://esports:change-this-secure-password@postgres:5432/esports_platform

# Redis Configuration
REDIS_PASSWORD=change-this-redis-password
REDIS_URL=redis://:change-this-redis-password@redis:6379

# JWT Configuration
JWT_SECRET=change-this-super-secret-jwt-key-in-production
JWT_REFRESH_SECRET=change-this-super-secret-refresh-key-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Frontend Configuration
VITE_API_URL=https://api.yourplatform.com
VITE_WS_URL=wss://api.yourplatform.com
VITE_STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key

# Payment Configuration (Stripe)
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_PRICING_TABLE_ID=prctbl_your_pricing_table_id

# AI Configuration (OpenAI)
OPENAI_API_KEY=sk-your_openai_api_key
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=1000

# Discord Bot Configuration
DISCORD_BOT_TOKEN=your_discord_bot_token
DISCORD_CLIENT_ID=your_discord_client_id
DISCORD_CLIENT_SECRET=your_discord_client_secret
DISCORD_REDIRECT_URI=https://yourplatform.com/auth/discord/callback

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
EMAIL_FROM=noreply@yourplatform.com

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
S3_BUCKET_NAME=your-esports-platform-bucket
CLOUDFRONT_DISTRIBUTION_ID=your_cloudfront_distribution_id

# Streaming Configuration
STREAMING_SERVER_URL=rtmp://yourplatform.com:1935/live
STREAMING_SECRET_KEY=your_streaming_secret_key
OBS_WEBSOCKET_PASSWORD=your_obs_websocket_password

# Security Configuration
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
CORS_ORIGIN=https://yourplatform.com

# Monitoring Configuration
PROMETHEUS_PORT=9090
GRAFANA_USER=admin
GRAFANA_PASSWORD=change-this-grafana-password

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=/app/uploads
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp

# Session Configuration
SESSION_SECRET=your-session-secret-key
SESSION_MAX_AGE=86400000

# Social Auth Configuration
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
TWITCH_CLIENT_ID=your_twitch_client_id
TWITCH_CLIENT_SECRET=your_twitch_client_secret

# Analytics Configuration
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
MIXPANEL_TOKEN=your_mixpanel_token

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
SENTRY_DSN=https://your_sentry_dsn

# Domain Configuration
DOMAIN=yourplatform.com
API_DOMAIN=api.yourplatform.com
CDN_DOMAIN=cdn.yourplatform.com

# SSL Configuration
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Health Check Configuration
HEALTH_CHECK_PATH=/api/health
HEALTH_CHECK_INTERVAL=30

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=your-backup-bucket

# Performance Configuration
NODE_OPTIONS=--max-old-space-size=4096
CLUSTER_WORKERS=4

# Cache Configuration
CACHE_TTL=3600
REDIS_KEY_PREFIX=esports:

# Feature Flags
FEATURE_AI_ENABLED=true
FEATURE_STREAMING_ENABLED=true
FEATURE_PAYMENT_ENABLED=true
FEATURE_DISCORD_ENABLED=true
FEATURE_ANALYTICS_ENABLED=true

# Development Only (Remove in Production)
# VITE_API_URL=http://localhost:3001
# VITE_WS_URL=http://localhost:3001